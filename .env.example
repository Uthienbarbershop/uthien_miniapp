# ===============================
# ZALO MINI APP CONFIGURATION
# ===============================

# Thông tin App (lấy trong Zalo Developer Console)
ZALO_APP_ID=your_zalo_app_id_here
ZALO_APP_SECRET=your_zalo_app_secret_here
ZALO_API_KEY=your_zalo_api_key_here   # nếu có

# OAuth2 Config
ZALO_CALLBACK_URL=https://yourdomain.com/oauth/callback
ZALO_SCOPE=apps.get.stats,apps.send.notification

# Webhook
ZALO_WEBHOOK_URL=https://yourdomain.com/zalo-webhook/webhook
ZALO_WEBHOOK_SECRET=your_webhook_secret_here


# ===============================
# ZALO BOT TOKEN (nếu có dùng Bot Zalo)
# ===============================
ZALO_BOT_TOKEN=your_zalo_bot_token_here


# ===============================
# GOOGLE / FIREBASE / GEMINI CONFIG
# ===============================

# Firebase project (nếu có dùng)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Google API Key (dùng cho Gemini hoặc dịch vụ Google khác)
GOOGLE_API_KEY=your_google_api_key_here


# ===============================
# SERVER CONFIGURATION
# ===============================
PORT=3000
NODE_ENV=development


# ===============================
# DATABASE (nếu có dùng MySQL / PostgreSQL)
# ===============================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=password
DB_NAME=your_db_name


# ===============================
# JWT / AUTH CONFIG
# ===============================
JWT_SECRET=your_jwt_secret_here